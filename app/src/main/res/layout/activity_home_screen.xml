<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eronmac.actwellness.HomeScreen">

    <Button
        android:text="Meal Tracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/button2"
        android:layout_below="@+id/wsbutton"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginTop="24dp"
        android:elevation="1dp"
        android:height="300dp"
        android:background="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:onClick="gotoMealTracking"/>

    <Button
        android:text="Workout Schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wsbutton"
        android:gravity="center_vertical|center_horizontal|center"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textSize="20sp"
        android:onClick="gotoWorkoutScheduleScreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="User Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:onClick="gotoUserProfile"/>
</RelativeLayout>
